server:
  port: 9003
spring:
  application:
    name: API-GATEWAY
  cloud:
    gateway:
      routes:
      - id: USER-SERVICE
        uri: lb://USER-SERVICE
        predicates:
        - Path=/users/**
        filters:
        - name: CircuitBreaker
          args:
            name: USER-SERVICE
            fallbackuri: forward:/userServiceFallback
      - id: ADDRESS-SERVICE
        uri: lb://ADDRESS-SERVICE
        predicates:
        - Path=/address/**
        filters:
        - name: CircuitBreaker
          args:
            name: ADDRESS-SERVICE
            fallbackuri: forward:/addressServiceFallback
     
management:
  endpoints:
    web:
      exposure:
        include: hystrix.stream
hystrix:
  command:
    fallbackcmd:
      execution:
        isolation:
          thread:
            timeoutInMilliseconds: 4000
            
eureka:
  client:
    register-with-eureka: true
    fetch-registry: true
    service-url:
      defult-zone: http://localhost:8761/eureka/
  instance:
    hostname: localhost